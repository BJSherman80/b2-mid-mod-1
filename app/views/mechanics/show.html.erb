<h1> Mechanic: <%=@mechanic.name %> </h1>
<p> Years of Experience: <%= @mechanic.experience %> </p>
<p>Current Rides They Are Working on:</p>
<% @mechanic.sorted_rides.each do |ride| %>
<p><%= ride.name %> </p><br>
<% end %>
<br>
<p>Add Ride for Repair</p>
<%= form_tag "/mechanics/#{@mechanic.id}/add_ride", :method => "post" do %>

  <%= label_tag :ride_id  %>
  <%= text_field_tag :ride_id %>

  <%= submit_tag("Submit") %>
<% end %>
<% flash.each do |type, msg| %>
<div>
  <%= msg %>
</div>
<% end %>
